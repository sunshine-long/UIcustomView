<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.marlon.example.uicustomviews.activity.MainActivity">


    <com.marlon.example.uicustomviews.views.DropView
        android:id="@+id/dropView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.marlon.example.uicustomviews.views.NewBottomLayout
        android:id="@+id/new_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
